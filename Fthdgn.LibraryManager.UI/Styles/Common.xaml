<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Fthdgn.LibraryManager.UI">
    <Style x:Key="BaseStyle" TargetType="{x:Type Control}">
        <Setter Property="FontFamily" Value="{StaticResource PoppinsLight}" />
    </Style>
    
    <Style x:Key="BaseButtonStyle" TargetType="{x:Type Button}" BasedOn="{StaticResource BaseStyle}" />
    <Style x:Key="BaseLabelStyle" TargetType="{x:Type Label}" BasedOn="{StaticResource BaseStyle}" />
    <Style x:Key="BaseTextBoxStyle" TargetType="{x:Type TextBox}" BasedOn="{StaticResource BaseStyle}" />

    <Style x:Key="BaseTextBlockStyle" TargetType="{x:Type TextBlock}">
        <Setter Property="FontFamily" Value="{StaticResource PoppinsLight}" />
    </Style>
    
    <Style x:Key="Header" TargetType="{x:Type TextBlock}">
        <Setter Property="FontFamily" Value="{StaticResource PoppinsRegular}" />
        <Setter Property="Foreground" Value="{StaticResource ForegroundColorBrush}" />
    </Style>
</ResourceDictionary>