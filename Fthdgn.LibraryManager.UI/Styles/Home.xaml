<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:icons="http://metro.mahapps.com/winfx/xaml/iconpacks"
                    xmlns:local="clr-namespace:Fthdgn.LibraryManager.UI.Styles">
    <Style x:Key="Home" TargetType="Page">
        <Style.Resources>
            <Style x:Key="MenuItem" TargetType="Button">
                <Style.Resources>
                    <Style x:Key="MenuItem__Icon" TargetType="icons:PackIconBase">
                        <Setter Property="Width" Value="46" />
                        <Setter Property="Height" Value="46" />
                        <Setter Property="Margin" Value="10" />
                        <Setter Property="HorizontalAlignment" Value="Center" />
                    </Style>
                    <Style x:Key="MenuItem__Text" TargetType="TextBlock">
                        <Setter Property="FontFamily" Value="Segoe UI Bold" />
                        <Setter Property="FontSize" Value="12" />
                        <Setter Property="HorizontalAlignment" Value="Center" />
                    </Style>
                </Style.Resources>
            </Style>
        </Style.Resources>
    </Style>
</ResourceDictionary>