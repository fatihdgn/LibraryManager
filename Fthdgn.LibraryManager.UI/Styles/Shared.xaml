<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Fthdgn.LibraryManager.UI.Styles">
    <Color x:Key="ForegroundColor">#FF000000</Color>
    <SolidColorBrush x:Key="ForegroundColorBrush" Color="{StaticResource ForegroundColor}"></SolidColorBrush>
    <FontFamily x:Key="AppFont">Segoe UI Light</FontFamily>
    <Style x:Key="Header" TargetType="{x:Type TextBlock}">
        <Setter Property="FontFamily" Value="{StaticResource AppFont}" />
        <Setter Property="Foreground" Value="{StaticResource ForegroundColorBrush}" />
    </Style>
</ResourceDictionary>